<?xml version="1.0"?>
<sdf version="1.8">
  <model name="atlas_robot">
    <static>false</static>
    <allow_auto_disable>true</allow_auto_disable>
    <pose>0 0 0.1 0 0 0</pose>

    <!-- Base -->
    <link name="base_link">
      <inertial>
        <mass>10.0</mass>
        <inertia>
          <ixx>0.05</ixx><iyy>0.05</iyy><izz>0.06</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="base_vis">
        <geometry><cylinder><radius>0.19</radius><length>0.09</length></cylinder></geometry>
        <material><ambient>0.2 0.2 0.2 1</ambient><diffuse>0.2 0.2 0.2 1</diffuse></material>
      </visual>
      <collision name="base_col">
        <geometry><cylinder><radius>0.19</radius><length>0.09</length></cylinder></geometry>
      </collision>
    </link>

    <!-- Wheels -->
    <link name="left_wheel_link">
      <pose>0 0.17 0 0 1.5708 0</pose>
      <visual name="lwheel_vis">
        <geometry><cylinder><radius>0.065</radius><length>0.04</length></cylinder></geometry>
        <material><ambient>0.05 0.05 0.05 1</ambient><diffuse>0.05 0.05 0.05 1</diffuse></material>
      </visual>
      <collision name="lwheel_col">
        <geometry><cylinder><radius>0.065</radius><length>0.04</length></cylinder></geometry>
      </collision>
      <inertial><mass>1.0</mass><inertia><ixx>0.002</ixx><iyy>0.002</iyy><izz>0.002</izz><ixy>0</ixy><ixz>0</ixz><iyz>0</iyz></inertia></inertial>
    </link>
    <link name="right_wheel_link">
      <pose>0 -0.17 0 0 1.5708 0</pose>
      <visual name="rwheel_vis">
        <geometry><cylinder><radius>0.065</radius><length>0.04</length></cylinder></geometry>
        <material><ambient>0.05 0.05 0.05 1</ambient><diffuse>0.05 0.05 0.05 1</diffuse></material>
      </visual>
      <collision name="rwheel_col">
        <geometry><cylinder><radius>0.065</radius><length>0.04</length></cylinder></geometry>
      </collision>
      <inertial><mass>1.0</mass><inertia><ixx>0.002</ixx><iyy>0.002</iyy><izz>0.002</izz><ixy>0</ixy><ixz>0</ixz><iyz>0</iyz></inertia></inertial>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent><child>left_wheel_link</child>
      <axis><xyz>0 1 0</xyz><limit><lower>-1e16</lower><upper>1e16</upper></limit><dynamics><damping>0.1</damping></dynamics></axis>
    </joint>
    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent><child>right_wheel_link</child>
      <axis><xyz>0 1 0</xyz><limit><lower>-1e16</lower><upper>1e16</upper></limit><dynamics><damping>0.1</damping></dynamics></axis>
    </joint>

    <!-- Caster (visual only) -->
    <link name="caster_link">
      <pose>-0.15 0 -0.045 0 0 0</pose>
      <visual name="caster_vis"><geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry></visual>
      <inertial><mass>0.1</mass><inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz><ixy>0</ixy><ixz>0</ixz><iyz>0</iyz></inertia></inertial>
    </link>
    <joint name="caster_fixed" type="fixed"><parent>base_link</parent><child>caster_link</child></joint>

    <!-- Diff drive system -->
    <plugin name="ignition::gazebo::systems::DiffDrive" 
            filename="ignition-gazebo-diff-drive-system">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.34</wheel_separation>
      <wheel_radius>0.065</wheel_radius>
      <odom_publish_frequency>30</odom_publish_frequency>
      <cmd_vel_topic>/cmd_vel</cmd_vel_topic>
      <odom_topic>/odom</odom_topic>
      <use_velocity_commands>true</use_velocity_commands>
    </plugin>

    <!-- Lidar on mast -->
    <link name="lidar_link">
      <pose>0 0 0.23 0 0 0</pose>
      <visual name="lidar_body"><geometry><cylinder><radius>0.04</radius><length>0.04</length></cylinder></geometry></visual>
      <collision name="lidar_body"><geometry><cylinder><radius>0.04</radius><length>0.04</length></cylinder></geometry></collision>
      <sensor name="lidar" type="gpu_lidar">
        <topic>/lidar/scan</topic>
        <update_rate>10</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>720</samples>
              <resolution>1</resolution>
              <min_angle>-3.141592</min_angle>
              <max_angle>3.141592</max_angle>
            </horizontal>
          </scan>
          <range><min>0.15</min><max>12.0</max><resolution>0.01</resolution></range>
        </ray>
        <noise><type>gaussian</type><mean>0.0</mean><stddev>0.005</stddev></noise>
      </sensor>
    </link>
    <joint name="lidar_fixed" type="fixed"><parent>base_link</parent><child>lidar_link</child></joint>

    <!-- RGB-D camera front -->
    <link name="camera_link">
      <pose>0.18 0 0.21 0 0 0</pose>
      <visual name="cam_body"><geometry><box><size>0.08 0.03 0.03</size></box></geometry></visual>
      <collision name="cam_body"><geometry><box><size>0.08 0.03 0.03</size></box></geometry></collision>
      <sensor name="front_rgbd" type="rgbd_camera">
        <topic>/camera</topic>
        <update_rate>30</update_rate>
        <camera>
          <horizontal_fov>1.204277</horizontal_fov>
          <image><width>640</width><height>480</height><format>R8G8B8</format></image>
          <clip><near>0.1</near><far>25.0</far></clip>
        </camera>
        <noise><type>gaussian</type><mean>0.0</mean><stddev>0.002</stddev></noise>
      </sensor>
    </link>
    <joint name="camera_fixed" type="fixed"><parent>base_link</parent><child>camera_link</child></joint>

    <!-- Arm base -->
    <link name="arm_base_link">
      <pose>0 0 0.16 0 0 0</pose>
      <visual name="arm_base"><geometry><box><size>0.08 0.08 0.06</size></box></geometry></visual>
      <collision name="arm_base"><geometry><box><size>0.08 0.08 0.06</size></box></geometry></collision>
    </link>
    <joint name="arm_base_fixed" type="fixed"><parent>base_link</parent><child>arm_base_link</child></joint>

    <!-- Shoulder pitch -->
    <link name="arm_link1">
      <pose>0 0 0.12 0 0 0</pose>
      <visual name="arm_l1"><geometry><box><size>0.05 0.05 0.18</size></box></geometry></visual>
      <collision name="arm_l1"><geometry><box><size>0.05 0.05 0.18</size></box></geometry></collision>
    </link>
    <joint name="shoulder_pitch" type="revolute">
      <parent>arm_base_link</parent><child>arm_link1</child>
      <axis><xyz>0 1 0</xyz><limit><lower>-1.0472</lower><upper>1.5708</upper></limit><dynamics><damping>5.0</damping></dynamics></axis>
    </joint>

    <!-- Elbow pitch -->
    <link name="arm_link2">
      <pose>0 0 0.18 0 0 0</pose>
      <visual name="arm_l2"><geometry><box><size>0.04 0.04 0.16</size></box></geometry></visual>
      <collision name="arm_l2"><geometry><box><size>0.04 0.04 0.16</size></box></geometry></collision>
    </link>
    <joint name="elbow_pitch" type="revolute">
      <parent>arm_link1</parent><child>arm_link2</child>
      <axis><xyz>0 1 0</xyz><limit><lower>-1.5708</lower><upper>1.5708</upper></limit><dynamics><damping>4.0</damping></dynamics></axis>
    </joint>

    <!-- Gripper mount & fingers -->
    <link name="grip_mount">
      <pose>0 0 0.10 0 0 0</pose>
      <visual name="mount"><geometry><box><size>0.04 0.04 0.04</size></box></geometry></visual>
      <collision name="mount"><geometry><box><size>0.04 0.04 0.04</size></box></geometry></collision>
    </link>
    <joint name="wrist_fixed" type="fixed"><parent>arm_link2</parent><child>grip_mount</child></joint>

    <link name="gripper_left">
      <pose>-0.015 0.035 0 0 0 0</pose>
      <visual name="left_f"><geometry><box><size>0.02 0.06 0.02</size></box></geometry></visual>
      <collision name="left_f"><geometry><box><size>0.02 0.06 0.02</size></box></geometry></collision>
    </link>
    <link name="gripper_right">
      <pose>0.015 -0.035 0 0 0 0</pose>
      <visual name="right_f"><geometry><box><size>0.02 0.06 0.02</size></box></geometry></visual>
      <collision name="right_f"><geometry><box><size>0.02 0.06 0.02</size></box></geometry></collision>
    </link>

    <joint name="gripper_left_slide" type="prismatic">
      <parent>grip_mount</parent><child>gripper_left</child>
      <axis><xyz>1 0 0</xyz><limit><lower>-0.02</lower><upper>0.02</upper></limit></axis>
    </joint>
    <joint name="gripper_right_slide" type="prismatic">
      <parent>grip_mount</parent><child>gripper_right</child>
      <axis><xyz>-1 0 0</xyz><limit><lower>-0.02</lower><upper>0.02</upper></limit></axis>
    </joint>

    <!-- Hold the joints at 0 unless commanded -->
    <plugin name="ignition::gazebo::systems::JointPositionController"
            filename="ignition-gazebo-joint-position-controller-system">
      <joint_name>shoulder_pitch</joint_name>
      <joint_name>elbow_pitch</joint_name>
      <joint_name>gripper_left_slide</joint_name>
      <joint_name>gripper_right_slide</joint_name>
    </plugin>
  </model>
</sdf>
